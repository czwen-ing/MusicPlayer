<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MusicPlayerTheme" parent="AppTheme">
    </style>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/holo_red_dark</item>
        <item name="tabSelectedTextColor">@android:color/holo_red_dark</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="imageBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="MusicTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SongTitle">
        <item name="android:text">"歌曲名"</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="SongArtist">
        <item name="android:text">"歌手 - 专辑"</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="actionbar_style" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
